        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Evermind">
        <activity android:name=".SearchCardsActivity" android:theme="@style/Theme.Evermind.NoActionBar"></activity>
        <activity android:name=".CardDataActivity" />
        <activity android:name=".MainActivity" />
